<div ng-controller="usersController">
    <div class="well">
      <h3>Add a new User</h3>
      <form ng-submit="addUser()">
        <div class="row">
          <div class="col-xs-6">
            <input type="text" ng-model="newUser.first_name" class="form-control" placeholder="First Name" />
          </div>
          <div class="col-xs-6">
            <input type="text" ng-model="newUser.last_name" class="form-control" placeholder="Last Name" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12">
            <br />
            <input type="text" ng-model="newUser.reason" class="form-control" placeholder="Reason for Visit" />
          </div>
        </div>
        <div class="row">
          <div class="col-xs-12 text-center">
            <br />
            <input type="Submit" value="Add User" class="btn btn-primary" />
          </div>
        </div>
      </form>
    </div>

    <h3>Currently Visiting</h3>
    <hr />
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Reason for Visit</th>
          <th>&nbsp;</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-show="!users.length">
          <td colspan="4">No visitors in the building.</td>
        </tr>
        <tr ng-repeat="user in users">
          <td>{{ user.first_name }}</td>
          <td>{{ user.last_name }}</td>
          <td>{{ user.reason }}</td>
          <td><a class="btn btn-danger" ng-click="deleteUser($index)">Remove</a></td>
        </tr>
      </tbody>
    </table>

  </div>